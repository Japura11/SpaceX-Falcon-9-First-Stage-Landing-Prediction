import pandas as pd
import numpy as np

# 1. Cargar dataset_part_1.csv (el que ya tienes)
df = pd.read_csv('dataset_part_1.csv')

print(f"Filas en dataset_part_1.csv: {len(df)}")

# 2. Crear la columna Class (la clave del ML)
def create_class(outcome):
    if pd.isna(outcome):
        return 0
    outcome_str = str(outcome)
    return 1 if outcome_str.startswith('True') else 0

df['Class'] = df['Outcome'].apply(create_class)

# 3. Verificar que todo está bien
print(f"Tasa de éxito: {df['Class'].mean():.4f} → {df['Class'].mean()*100:.1f}%")
print(f"Éxitos: {df['Class'].sum()}, Fracasos: {len(df) - df['Class'].sum()}")

# 4. GUARDAR dataset_part_2.csv
df.to_csv('dataset_part_2.csv', index=False)

print("\n¡PERFECTO! dataset_part_2.csv creado correctamente")
print("Ya puedes ejecutar el notebook de Folium y Machine Learning")
