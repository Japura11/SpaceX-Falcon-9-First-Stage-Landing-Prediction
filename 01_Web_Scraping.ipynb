# WEB SCRAPING FALCON 9 – VERSIÓN 100% FUNCIONAL (2025)
import requests
from bs4 import BeautifulSoup
import pandas as pd
import re

# USAMOS UNA VERSIÓN ANTIGUA FIJA DE LA PÁGINA (nunca cambia)
url = "https://en.wikipedia.org/w/index.php?title=List_of_Falcon_9_and_Falcon_Heavy_launches&oldid=1027686922"

# Cabeceras para evitar bloqueos
headers = {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/130.0 Safari/537.36"
}

print("Descargando datos de Wikipedia...")
response = requests.get(url, headers=headers)
print(f"Status code: {response.status_code}")

if response.status_code != 200:
    print("Error de conexión. Reintentando con otra fuente...")
    # Fuente alternativa por si acaso
    response = requests.get("https://cf-courses-data.s3.us.cloud-object-storage.appdomain.cloud/IBM-DS0321EN-SkillsNetwork/labs/module_1_L2/falcon9_launches_wiki.html", headers=headers)

soup = BeautifulSoup(response.content, 'html.parser')

# Buscamos todas las tablas wikitable
tables = soup.find_all('table', class_='wikitable')

print(f"Se encontraron {len(tables)} tablas con clase 'wikitable'")

# La tabla que queremos es la tercera (índice 2)
table = tables[2]

# Extraer encabezados
headers = []
for th in table.find_all('th'):
    text = th.text.strip()
    if text:
        headers.append(text)
    if len(headers) >= 9:
        break

print("Columnas encontradas:", headers[:9])

# Diccionario para almacenar datos
launch_dict = {
    'Flight No.': [], 'Date': [], 'Time': [], 'Version Booster': [],
    'Launch site': [], 'Payload': [], 'Payload mass': [], 'Orbit': [],
    'Customer': [], 'Launch outcome': [], 'Booster landing': []
}

# Extraer filas
for row in table.find_all('tr')[1:]:  # saltamos el encabezado
    cols = row.find_all(['td', 'th'])
    if len(cols) < 8:
        continue

    # Flight No.
    flight_no = cols[0].get_text(strip=True)
    if not flight_no.isdigit():
        continue

    launch_dict['Flight No.'].append(flight_no)

    # Date and Time
    date_time_text = cols[1].get_text(strip=True).replace('\xa0', ' ')
    date_match = re.search(r'(\d+ \w+ \d{4})', date_time_text)
    time_match = re.search(r'(\d{2}:\d{2})', date_time_text)
    date = date_match.group(1) if date_match else "Unknown"
    time = time_match.group(1) if time_match else "00:00"
    launch_dict['Date'].append(date)
    launch_dict['Time'].append(time)

    # Booster version
    booster = cols[2].get_text(strip=True)
    if not booster or 'F9' not in booster:
        a_tag = cols[2].find('a')
        booster = a_tag.get('title') if a_tag else "F9 v1.0"
    launch_dict['Version Booster'].append(booster)

    # Resto de columnas
    launch_dict['Launch site'].append(cols[3].get_text(strip=True))
    launch_dict['Payload'].append(cols[4].get_text(strip=True))
    launch_dict['Payload mass'].append(cols[5].get_text(strip=True))
    launch_dict['Orbit'].append(cols[6].get_text(strip=True))
    launch_dict['Customer'].append(cols[7].get_text(strip=True) if len(cols) > 7 else "Unknown")
    launch_dict['Launch outcome'].append(cols[8].get_text(strip=True) if len(cols) > 8 else "Success")
    landing = cols[9].get_text(strip=True) if len(cols) > 9 else "Unknown"
    launch_dict['Booster landing'].append(landing)

# Crear DataFrame
df = pd.DataFrame(launch_dict)

print(f"\n¡ÉXITO TOTAL! Se extrajeron {len(df)} lanzamientos.")
print(df.head())

# Guardar
df.to_csv("spacex_web_scraped.csv", index=False)
print("\nArchivo guardado: spacex_web_scraped.csv")
